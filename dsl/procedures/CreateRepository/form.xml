<editor>
    <formElement>
        <type>entry</type>
        <label>Configuration:</label>
        <property>config</property>
        <configuration>1</configuration>
        <required>1</required>
        <documentation>Unique name for the plugin configuration.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Owner:</label>
        <property>github_owner</property>
        <required>1</required>
        <documentation>Repository owner, may be either user or organization.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Repository Name:</label>
        <property>github_repo</property>
        <required>1</required>
        <documentation>Repository name.</documentation>
    </formElement>
    <formElement>
        <type>textarea</type>
        <label>Repository Description:</label>
        <property>github_description</property>
        <required>0</required>
        <documentation>Description for the repository.</documentation>
    </formElement>
    <formElement>
        <type>checkbox</type>
        <label>Public?:</label>
        <property>github_public</property>
        <required>0</required>
        <documentation>Check to create a public repository.</documentation>
        <checkedValue>true</checkedValue>
        <uncheckedValue>false</uncheckedValue>
        <initiallyChecked>true</initiallyChecked>
    </formElement>
    <formElement>
        <type>textarea</type>
        <label>Teams:</label>
        <property>github_teams</property>
        <required>0</required>
        <documentation>Teams to add to the repository.
            E.g. "admins:ADMIN", "users:PUSH".
            Teams are newline-separated. Available permissions are ADMIN, PULL and PUSH.
            Teams are applicable to the organization only.
        </documentation>
    </formElement>
    <formElement>
        <type>textarea</type>
        <label>Branch Protection Rules:</label>
        <property>github_branchProtectionRules</property>
        <required>0</required>
        <documentation>Rules to protect branches, e.g. master: reviewers = 1</documentation>
    </formElement>
    <formElement>
        <type>checkbox</type>
        <label>Add License?:</label>
        <property>github_addLicense</property>
        <required>0</required>
        <checkedValue>true</checkedValue>
        <uncheckedValue>false</uncheckedValue>
        <documentation>If checked, a license will be added to the repository.</documentation>
    </formElement>
    <formElement>
        <property>github_licenseFile</property>
        <label>License File:</label>
        <type>entry</type>
        <required>0</required>
        <dependsOn>github_addLicense</dependsOn>
        <condition>${github_addLicense} == "true"</condition>
        <documentation>Path to the LICENSE file on the filesystem. If the file does not exist, the procedure will throw an error.</documentation>
    </formElement>
</editor>
