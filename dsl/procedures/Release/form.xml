<editor>
    <formElement>
        <type>entry</type>
        <label>Configuration:</label>
        <property>config</property>
        <configuration>1</configuration>
        <required>1</required>
        <documentation>Unique name for the plugin configuration.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Repository Name:</label>
        <property>repoName</property>
        <required>1</required>
        <documentation>Repository name, in form owner/repo.</documentation>
    </formElement>
    <formElement>
        <type>radio</type>
        <label>Update Action:</label>
        <property>updateAction</property>
        <required>1</required>
        <documentation>Choose update action - what to do if the release already exists.</documentation>
        <option>
            <name>Do Nothing</name>
            <value>noop</value>
        </option>
        <option>
            <name>Recreate</name>
            <value>recreate</value>
        </option>
        <option>
            <name>Fail</name>
            <value>fail</value>
        </option>
        <value>noop</value>
    </formElement>
    <formElement>
        <property>releaseName</property>
        <label>Release Name:</label>
        <documentation>The name for the release.</documentation>
        <required>0</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <type>entry</type>
        <property>tagName</property>
        <label>Tag Name:</label>
        <required>1</required>
        <documentation>Tag name for the release</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <property>commitish</property>
        <required>0</required>
        <documentation>The commit to create a tag from.</documentation>
        <label>Source Commit:</label>
    </formElement>
    <formElement>
        <type>textarea</type>
        <property>body</property>
        <label>Release Body:</label>
        <documentation>Description for the release</documentation>
    </formElement>
    <formElement>
        <type>checkbox</type>
        <property>prerelease</property>
        <label>Prerelease?:</label>
        <checkedValue>true</checkedValue>
        <uncheckedValue>false</uncheckedValue>
        <documentation>Check to create pre-release.</documentation>
    </formElement>
    <formElement>
        <type>textarea</type>
        <property>assets</property>
        <label>Release Assets:</label>
        <required>0</required>
        <documentation>Release assets in form {"name": "path/to/file"}</documentation>
    </formElement>
    <formElement>
        <type>checkbox</type>
        <dependsOn>updateAction</dependsOn>
        <condition>${updateAction} == 'recreate'</condition>
        <property>deleteOldTag</property>
        <label>Delete Old Tag?:</label>
        <documentation>If checked, the old tag associated with the old release will be deleted.</documentation>
        <checkedValue>true</checkedValue>
        <uncheckedValue>false</uncheckedValue>
        <value>true</value>
    </formElement>
</editor>
